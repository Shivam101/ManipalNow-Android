<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <ImageView 
        android:id="@+id/helpimg1"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        />
    
    <TextView 
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/helpimg1"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        />
    <TextView 
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_below="@id/tv2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        />
    
    <LinearLayout android:id="@+id/footer" android:layout_width="fill_parent"
    android:layout_height="wrap_content" android:orientation="horizontal"
    android:background="@color/playred"
    android:layout_alignParentBottom="true" style="@android:style/Holo.Light.ButtonBar">

    <Button android:id="@+id/saveButton" android:layout_width="wrap_content"
        style="?android:attr/borderlessButtonStyle"
        android:textColor="#FFFFFF"
        android:layout_weight="1"
        android:layout_height="wrap_content"         android:text="Got It !"
         />

    </LinearLayout>

    <TextView 
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="Swipe to Continue"
        android:textColor="@android:color/darker_gray"
        android:layout_marginBottom="25dp"
        />
    
    

</RelativeLayout>